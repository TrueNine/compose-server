{
  "editor.rulers": [
    2,
    4,
    80,
    160
  ],
  "explorer.excludeGitIgnore": false,
  "files.exclude": {
    "**/character": true,
    "**/books": true,
    "**/countries": true,
    "**/.playwright-mcp": true,
    "**/pnpm-lock.yaml": true
  },
  "search.exclude": {
    "**/.gradle": true,
    "**/books": true,
    "**/countries": true,
    "**/.obsidian": true,
    "**/character": true,
    "**/build": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "build.gradle.kts": "settings.gradle.kts, gradlew, gradlew.bat, gradle.properties",
    "tsconfig.json": "tsconfig.*.json, tsconfig.tsbuildinfo, tsconfig.*.tsbuildinfo",
    "vite.config.ts": "vitest.config.ts, env.d.ts",
    "README.md": "LICENSE, TODO.md, .editorconfig, CODEBUDDY.md, .gitignore, .gitattributes",
    ".gitignore": "LICENSE, TODO.md, .editorconfig, CODEBUDDY.md, .gitattributes",
    ".env.example": ".env, .env.*",
    "AGENTS.md": "CLAUDE.md"
  },
  "[markdown]": {
    "editor.wordWrap": "off"
  },
  "workbench.sideBar.location": "left",
  "workbench.colorCustomizations": {
    "editorGroup.border": "#d530c4",
    "editorGroup.dropBackground": "#d530c433",
    "focusBorder": "#d530c4",
    "tab.activeBorder": "#d530c4",
    "tab.activeBorderTop": "#d530c4",
    "editorGroupHeader.tabsBorder": "#d530c4",
    "panel.border": "#d530c4",
    "sideBar.border": "#d530c4",
    "editor.lineHighlightBorder": "#d530c4",
    "activityBar.activeBorder": "#d530c4",
    "titleBar.activeBackground": "#d530c4",
    "titleBar.activeForeground": "#ffffff",
    "titleBar.inactiveBackground": "#b625a8",
    "titleBar.inactiveForeground": "#f3c4ee",
    "titleBar.border": "#d530c4"
  }
}
