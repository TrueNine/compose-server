{
  "explorer.excludeGitIgnore": true,
  "files.exclude": {
    "**/.gradle": true,
    "**/build": true,
    "**/build-cache": true,
    "**/generated": true,
    "**/.generated": true,
    "**/.xcodemap": true,
    "**/logs": true,
    "**/.logs": true,
    "**/*.log": true,
    "**/.intellijPlatform": true,
    "**/node_modules": true,
    "**/.claude": true,
    "**/.cursor": true,
    "**/.playwright-mcp": true,
    "**/.mcp.json": true,
    "**/pnpm-lock.yaml": true,
    "**/.env": true
  },
  "search.exclude": {
    "**/.gradle": true,
    "**/build": true,
    "**/build-cache": true,
    "**/generated": true,
    "**/.generated": true,
    "**/node_modules": true,
    "**/.intellijPlatform": true,
    "**/.playwright-mcp": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "build.gradle.kts": "settings.gradle.kts, gradlew, gradlew.bat, gradle.properties",
    "README.md": "LICENSE, TODO.md, .editorconfig, CODEBUDDY.md, .gitignore, .gitattributes",
    ".env.example": ".env, .env.*"
  },
  "[markdown]": {
    "editor.wordWrap": "off"
  },
  "workbench.sideBar.location": "right"
}
