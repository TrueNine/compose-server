{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "opusplan",
  "permissions": {
    "deny": [
      "WebFetch",
      "WebSearch",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(docker:*)"
    ],
    "allow": [
      "mcp__*",
      "Bash",
      "Read"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "sequential-thinking",
    "memory",
    "deepwiki",
    "grep"
  ]
}
